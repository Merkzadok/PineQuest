datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  username      String         @unique
  password      String
  role          Role           @default(USER)
  profile       Profile?
  profileId     Int?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Profile {
  id          Int         @id @default(autoincrement())
  username    String
  avatarImage String?
  age         Int         @default(0)
  userId      Int         @unique
  user        User        @relation(fields: [userId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  readings    Reading[]
}

model Reading {
  id        Int       @id @default(autoincrement())
  sentences String
  startTime DateTime?
  endTime   DateTime?
  profileId Int
  profile   Profile   @relation(fields: [profileId], references: [id])
  accuracy  String
  audio     String?
}

enum Role {
  USER
  ADMIN
}